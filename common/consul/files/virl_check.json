    "http": "http://localhost:8774/",
    "interval": "90s",
    "timeout": "20s"
  },
  {
    "id": "ank_cisco_webserver",
    "name": "ank-cisco-webserver on port 19401",
    "service_id": "virl-{{salt['grains.get']('host', 'generic') }}",
