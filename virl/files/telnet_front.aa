  # allow for kvm to read nova.conf
  /bin/grep rmix,
  /etc/nova/nova.conf r,
  
  # allow fronting telnet consoles for kvm
  /bin/bash rmix,
  /bin/sed rmix,
  /usr/bin/sort rmix,
  /usr/bin/gawk rmix,
  /usr/bin/xargs rmix,
  /sbin/ifconfig rmix,
  /usr/bin/telnet_front rmix,
  /usr/bin/socat rmix,
  /bin/sleep rmix,
  /usr/bin/timeout rmix,

  @{PROC}/[0-9]*/cmdline r,
  @{PROC}/@{pid}/net/dev r,
  @{PROC}/@{pid}/fd/* r,
  @{PROC}/@{pid}/fd/ r,
  @{PROC}/net/route r,
  network inet dgram,
